{
	//
	"editor.tabSize": 2,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": null,
	//
	"files.associations": {
		"*.css": "tailwindcss"
	},
	//
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.fixAll": "explicit",
			"source.organizeImports": "never"
		}
	},
	"[python]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": "explicit"
		}
	}
}